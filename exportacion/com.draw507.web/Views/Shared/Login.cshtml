<div class="row">
    <div class="col-xs-12 text-center mb-20">
        <span class="font-22"><strong></strong></span>
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
        <div class="card card-login">
            <div class="card-header text-center" data-background-color="red">
                <h4 class="card-title">@$safeprojectname$.RecursosLocalizables.StringResources.LoginTitulo</h4>
            </div>
            <div class="card-content" style="padding-top:15px;padding-bottom:15px;">
                @using (Html.BeginForm("Login", "Seguridad", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "frmLogin", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">face</i>
                </span>
                <div class="form-group label-floating is-empty">
                    <label class="control-label">@$safeprojectname$.RecursosLocalizables.StringResources.LblLoginUsuario</label>
                    <input class="form-control" type="text" name="NombreUsuario" autocomplete="off" required>
                    <span class="material-input"></span>
                </div>
            </div>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">lock_outline</i>
                </span>
                <div class="form-group label-floating is-empty">
                    <label class="control-label">@$safeprojectname$.RecursosLocalizables.StringResources.LblLoginContrasena</label>
                    <input class="form-control" type="password" name="Contrasena" autocomplete="off" required>
                    <span class="material-input"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="checkbox icheck">
                    </div>
                </div>
                <div class="col-xs-6" style="margin-top:15px;">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">@$safeprojectname$.RecursosLocalizables.StringResources.BtnIniciarSesion</button>
                </div>
            </div>
}
            <div class="row">
                <div class="col-xs-12 text-center"><span class="text-muted">v. @ViewContext.Controller.GetType().Assembly.GetName().Version.ToString()</span></div>
            </div>
            </div>
        </div>
    </div>
</div>
