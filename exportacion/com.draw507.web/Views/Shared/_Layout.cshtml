<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NIIF | Revision de datos | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-transition animated fadeIn hidden-print">
    <div class="wrapper">
        @RenderSection("sideBar", required: false)
        <div class="main-panel">
            <nav class="navbar navbar-absolute">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#"></a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="material-icons">person</i> @User.Identity.Name
                                    <p class="hidden-lg hidden-md"></p>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a id="lnk-logOut">@$safeprojectname$.RecursosLocalizables.StringResources.SubMenuCerrarSesion</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <form id="frm-LogOut" method="post" action="@Url.Action("LogOff", "Seguridad")" style="display:none">
        @Html.AntiForgeryToken()
    </form>
    @Html.Partial("_Spinner")
    @Html.Partial("_SmallModal")
    @Html.Partial("_Modal")
    @Html.Partial("_Confirm")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



